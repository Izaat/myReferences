        </div>
        
    //mytheme >> sass >> theme >> _theme.scss
        #wrapper-navbar
            .top-header-holder {
                height: 260px;               //default
                background: #f1f1f1;         //default
                padding-top:50px;            //adds padding to top to the plain texts
                padding-bottom:50px;         //adds padding to bottom to the plain texts
                
            }

    
    ///////////////////////////////////////////////////
    Splitting header texts into 3 separate sections (side by side) - utilize row and col
    Adding logo
    Styling reservation contact and address
    //mytheme >> page-templates >> header.php     
        <div id="wrapper-navbar">
            <div class="top-header-holder">        
                <div class="container">       
                    //<div class="row">                              //This put the entire texts into row which can be subdivided into columns
                    <div class="row align-items-end">                //Aligns the entire row    
                    
                        <div class="col-4">                          //This adds in a new column and add the logo holder into it
                            //<div class="logo-holder">   
                                //<div class="logo"></div>
                                //<img src="logo.svg" alt="">        //logo image is in ../mytheme/img/logo.svg but this need php syntax to pass through wordpress
                                <img src="<?php echo get_template_directory_uri(); ?> /img/logo.svg" alt="My Theme Logo" width="275"> //width is optional for resizing, can be in percentage or pixels
                            //</div>

                            <a href="/" class="logo-holder">         //add link to logo holder, styled in css (display:block)
                                <img src="<?php echo get_template_directory_uri(); ?> /img/logo.svg" alt="My Theme Logo" width="275">
                            </a>
                            
                        </div> //col-4
                        
                        <div class="col-6">
                            <div class="reservation-holder">
                                <div class="contact-holder">
                                    //<div class="phone"><i class="fa fa-phone"></i>12345</div>              //iclass adds in symbol
                                    <a href="#" class="phone"><i class="fa fa-phone"></i>12345</a>           //Adds in hyperlink
                                    //<div class="address"><i class="fa fa-map"></i>Texts texts</div>        //iclass adds in symbol
                                    <a href="#" class="address"><i class="fa fa-map"></i>Texts texts</a>     //Adds in hyperlink
                                </div>
                                //<div class="reservation-btn">Make reservation</div>    //class name same with css
                                <a href="#" class="reservation-btn">Make reservation</a> //"a" tags adds in links
                            </div>
                        </div> //col-6   
                        
                        <div class="col-">                                                           //adding column without size
                            <div class="social-media-holder">                                        //"social-media-holder" styled in css
                                //<i class="fa fa-facebook"></i>
                                //<i class="fa fa-instagram"></i>
                                <a href="#"><i class="fa fa-facebook"></i></a>    //adding links
                                <a href="#"><i class="fa fa-instagram"></i></a>
                            </div>      
                        </div> //col-
                        
                    </div> //row align-items-end
                </div>   //container                
            </div>      //top-header-holder
            .
            .
            .
        </div>
    
    //mytheme >> sass >> theme >> _theme.scss
        #wrapper-navbar
            .top-header-holder {
                .
                .
                .
                .container {
                
                    .logo-holder {
                        display: block;
                        .logo {}
                    } //logo-holder
                    
                    .social-media-holder {
                        font-size: 50px;  //resizing the symbol
                        a {
                            color: $secondary;        //change symbol color
                            text-decoration: none;    //disable underline, strike-through, overline, etc
                            &:hover {
                                color: darken($secondary, 15%);   //15% darker when hover over
                            }
                        }
                    }
                    
                    .contact-holder {
                        font-size: 18px;
                        a {                                  //??
                            display: inline-block;
                            margin-right: 1em;               //Adds margin
                            margin-bottom: 1em;              //Adds margin
                            color: $primary;
                            .fa {                            //adds in color to symbol
                                color: $secondary;
                            }
                        }    
                    }
                    
                    .reservation-btn {                       //Adding fonts
                        font-family: 'Fredericka The Great';
                        font-size: 38px;
                        border: 1px dotted $secondary;       //Adds the border around "Make reservation" text using $secondary color variable
                        display: inline-block;               //constricts linebox to text
                        padding: 0.25em 0.5em;               //adds padding around text
                        border-radius: 0.25em;               //adds rounded corners to the outline
                        transition: 0.25s ease all;          //ease animation when hover
                        cursor: pointer;
                        text-decoration: none;
                        &:hover {
                            background: $secondary;          //change color when hover
                            color: white;
                        }                    
                    }
                    
                }  //container          
            } //top-header-holder


//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
09. Header Responsive Design

    Define Responsive Breakpoints & Auto Resize Function
        //mytheme >> sass >> theme >> _theme.scss
            
            $primary: ...
            $secondary: ...
            
            $xl: 1440px;        //The entire block taken from src/sass/bootstrap4/_variables.scss >> $grid-breakpoints: ()
            $lg: 992px;
            $md: 768px;
            $sm:  576px;
            
            .
            .
            .
            
            #wrapper-navbar >> #main-nav >> ul >> li >> 
                a {
                    .
                    .
                    padding ...
                    @media (max-width: $xl, ) {                                //Add this for auto resizing function
                        font-size: 20px;
                        padding: 1em 0.33em;                        
                    }
                }
           
    Shrinking the headers to make space for the hamburger icon
        //mytheme >> page-templates >> header.php
            <div id="wrapper-navbar">
                <div class="top-header-holder">
                    <div class="container">
                        <div class="row align-items-end">
                            <div class="col-6"> 
                                <div class="reservation-holder">                            //Edit centre column (reservation) 
                                    <div class="contact-holder">
                                        <a href="#" class"phone ...
                                        <a href="#" class"address ...
                                        <div class="social-media-holder-tablet">           //to be pasted into _theme.scss
                                            <a href="#"><i class="fa fa-facebook"></i></a>
                                            <a href="#"><i class="fa fa-instagram"></i></a>
                                        </div>
                                        
                                   
        //mytheme >> sass >> theme >> _theme.scss                    
            #wrapper-navbar
                .top-header-holder {}
                    .container {}
                        
                        .col-6 {
                            @media(max-width:$lg) {
                                text-align: center;                                        //makes col-6 (reservation) centered  when the browser shrinks
                            }
                        }
                    
                        .social-media-holder, .social-media-holder-tablet {                //paste ".social-media-holder-tablet" into .social-media-holder
                            //                                                             //this enables 2 classes the ability share the same code
                            font-size: 50px;
                            a {...}
                            
                            @media(max-width:$lg) {
                                display: none;
                            }
                            
                            &.social-media-holder-tablet {
                                display: none;
                                @media(max-width:$lg) {
                                    display: inline-block;
                                    font-size: 18px;
                                }
                            }                            
                        }

                        .contact-holder {
                            font-size: 18px;
                            font-weight: 600;                                              //apply bold to text   
                            a {
                                display: ...
                                margin-right: 1em;                                         //Default margin
                                margin-bottom: 1em;                                        //Default margin
                                @media(max-width: $lg) {                                   //Adding this will override the default margins when the browser shrinks
                                    margin-right: 0.5em;
                                    margin-bottom: 1em;
                                }
                            }    
                            
                            @media(max-width:$lg) {
                                font-size: 16px;                                            //shrinks font size
                                .address {
                                    display: none;                                          //hides an element when the browser shrinks
                                }
                            }                        
                        }
                        
                        .reservation-btn {                                                  //shrinks the button
                            font-family: ...
                            .
                            .
                            .
                            &:hover {...}
                            @media(max-width:$lg) { 
                                font-size: 18px;                                            //shrinks font size
                            }                        
                        }

