        //mytheme >> sass >> theme >> _theme.scss     ->    show one of the two menu icons
            #wrapper-navbar {} > 
                .top-header-holder {} >>
                    .navbar-toggler {
                        display: none;            
                        @media(max-width:$lg) {      
                            display: block;
                        }
                        padding: 0em 1em;  
                        padding-top: 1em;  
