10. Header Mobile Menu Button and Nav

    Menu Button - Hamburger Icon
    
        //mytheme >> page-templates >> header.php                           //CUT
            <nav id="main-nav" class="navbar navbar-expand-lg" ... >
                <div class="container">
                    <button class="navbar-toggler" type="button" data-toggle="collapse"                 //Cut the entire button class and paste into <div class="col-">
                    data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" 
                    aria-expanded="false" aria-label="<?php esc_attr_e('Toggle navigation', 'understrap'); ?>" >           
                        <span class="navbar-toggler-icon"></span>
                    </button>

        //mytheme >> page-templates >> header.php                           //PASTE
                <div id="wrapper-navbar">
                    <div class="top-header-holder">
                        <div class="container">
                            <div class="row align-items-end">
                                <div class="col-">                                
                                
                                    <button class="navbar-toggler" type="button" data-toggle="collapse"                 //Paste the entire button class, NOTE: Take note of navbar-toggler and navbar-toggler-icon
                                    data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" 
                                    aria-expanded="false" aria-label="<?php esc_attr_e('Toggle navigation', 'understrap'); ?>" >           
                                        <div class="bar"></div>                                                        //the "bar" class creates the 3 line icon
                                        <div class="bar"></div>
                                        <div class="bar"></div>
                                        <div class="menu-title">                                                        //Class created in header.php under navbar-toggler
                                            Menu                                                                        //Button title
                                        </div>
                                    </button>                                
                                    
                                    <div class="social-media-holder">
                                        <a href="#" ... class="fa fa-facebook ...        

        //mytheme >> sass >> theme >> _theme.scss
            #wrapper-navbar {
                .top-header-holder {
                    .
                    .
                    .
                    .navbar-toggler {                         
                        //border: 1px solid blue;            // this creates temporary marker for the button to show its location in the browser, remove once done
                        //background: red;                   // this creates temporary marker for the button to show its location in the browser, remove once done
                        padding: 0em 1em;                    //Add padding (top and bottom = 0em), (left and right = 1em)
                        padding-top: 1em;                    //Add padding to top
                        &:hover {
                            background: rgba(#5DA0AA, 0.25);      //Add hover state at 25% opacity
                        }
                        .bar {
                            height: 4px;
                            border-radius: 4px;
                            background: rgba(5DA0AA, 0.5);           //0.5 is the opacity
                            margin-bottom: 4px;                      //Add margin below the icon
                            width: 2.5em;                            //width of the 3 bars
                        }
                        .menu-title {                                //Add 'Menu" title styling. To be added into header.php - "button class col-"
                            font-size: 14px;
                            margin-top: 2.5em;
                            text-transform: uppercase;               //Change all menu texts into capital letters
                            font-weight: 600;                        //bold text
                        }
                    }
                }
            }

    Menu Navigation - Responsive Dropdown Menu
        //mytheme >> sass >> theme >> _theme.scss        -- Lowers down the background image when the dropdown menu opens
            #wrapper-navbar {} >            
                margin-bottom: -360px;                  //By default, this was directly under #wrapper-navbar, located below .top-header-holder
                @media(max-width:$lg) {                 //taken from "col-6"
                    margin-bottom: 0px;        
                }

            .home-banner {
                height ...
                .
                .
                //background: #ccc;                                 //Remove
                background-size ...
                background-position: bottom-center;                 //positions image to bottom in browser mode
                @media(max-width:$lg) {                             //taken from "col-6"
                    background-position: top -350px center;         //positions image to top center in mobile mode
                }                
            }

            .top-header-holder {
                .
                .
                //background:#f1f1f1;               //Remove
                .navbar-toggler {
                    display: none;                  //This sets mobile menu icon to disable as a default
                    @media(max-width:$lg) {         //Display enabled in mobile browser
                        display: block;
                    }
                }
            }

    Make Logo Smaller
        //mytheme >> sass >> theme >> _theme.scss
            #wrapper-navbar
                .top-header-holder {}
                    @media(max-width:$lg) {      //This shrinks the padding between columns
                        padding-top: 30px;
                        height: auto;                     //Without adding this, the @media wont function since the top-header-holder default is still active at 260px
                        padding-bottom: 30px;                        
                    }
                    .container {}
                        .logo-holder {                   //In header.php, the logo image is under logo-holder class
                            display:block;
                            //.logo { ...empty }       //This will be removed since image is under logo-holder class
                            img {
                                width: 275px;          //In header.php, the logo image size is set at width of 275. To be moved into this block and empty out in header.php
                                @media(max-width:$lg) {
                                    width: 200px;      //Set the logo to smaller size for responsiveness
                                }
                            }                            
                        }     


