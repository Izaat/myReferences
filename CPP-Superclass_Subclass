#include<iostream>
using namespace std;

//SUPER CLASS
class Chef {
    
    public:
        void makeChicken(){
            cout << "the chef makes yummy chicken" << endl;
        }
        void makeSalad(){
            cout << "the chef makes salad" << endl;
        }
        void makeSpecialDish(){
            cout << "the chef makes bq ribs" << endl;
        }
};

//SUB CLASS
class ItalianChef : public Chef{ //this line is to inherit super class
    public:
        void makePasta(){
            cout << "The chef makes pasta" << endl;
        }
        
        //this will overwrite the same variable name listed in Superclass
        //try chef.makeSpecialDish on both chef and italianChef and value will be different
        void makeSpecialDish(){ 
            cout << "The chef makes chicken parm" << endl;
        }
    
}

int main(){
    Chef chef;
    //chef.makePasta; //because chef statement can't inherit from subclass since it's a superclass
    chef.makeChicken();
    
    ItalianChef italianChef;
    italianChef.makePasta();
    
    return 0;
    
}

//SUMMARY
//1. Superclass can't retrieve information from subclass
//2. Subclass can inherit values of superclass, italianChef can make salad
//3. Subclass can retrieve values of superclass and overwrite its value, makeSpecialDish
//End
