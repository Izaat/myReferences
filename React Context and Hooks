    ThemeToggle.js              
        //import React, {Component} from 'react';                                       
        import React, {useContext} from 'react';                                  //06. Convert ThemeToggle.js into function component
        import {ThemeContext} from '../contexts/ThemeContext';    
        
        //class ThemeToggle extends Component {                                   //07. No longer in use
        //    static contextType = ThemeContext    
        //    render () {
