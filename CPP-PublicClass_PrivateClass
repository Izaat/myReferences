//SUMMARY
//1. public class
//2. private class
//End

#include<iostream>
using namespace std;

class Movie {
    private: //can only be access by codes inside movie class except the void function
        string rating;
    public
        string title;
        string director;
        Movie (string aTitle, string aDirector, string aRating){
            title = aTitle;
            director = aDirector;
            setRating (aRating); //linking to private class
        }
        
        //void function appears for accessing private class
        void setRating (string aRating){
            
            //if equal to any one in the bracket then it uses the rating
            //otherwise, if invalid rating being entered, it will use NR of not rated shown in else statement
            if(aRating == "G" || aRating == "PG" || aRating == "PG13" aRating == "R" aRating == "NR"){ 
                rating = aRating;
            }else {
                rating = "NR";
            }
        }
        
        //exist to give access to private class
        string getRating(){
            return rating;
            
        }
};

int main(){
    Movie avengers("The Avengers", "Josh Whedon"); //add title and director to value
    
    //avengers.rating ="Dog"; //can't be used since rating is private
    //cout << avengers.rating; //will give error because it can't access private class
    
    avengers.setRating(Dog) = "NR"; //to access private class, use this line
    cout << avengers.getRating(); //to access private class, use this line
    return 0;
}

